<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_cover"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:src="@drawable/cover_icon" />

    <TextView
        android:id="@+id/item_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_cover"
        android:layout_below="@id/item_cover"
        android:layout_marginStart="@dimen/list_item_margin_left"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/book_name_font_size"
        tools:text="这是书名" />

    <TextView
        android:id="@+id/item_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_book_name"
        android:layout_below="@id/item_book_name"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="@dimen/list_item_margin_left"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/dim_grey"
        android:textSize="@dimen/book_name_font_size"
        tools:text="作者" />


</RelativeLayout>
