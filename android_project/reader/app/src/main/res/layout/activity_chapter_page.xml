<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/page_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/menu_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/back_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="返回" />

            <TextView
                android:id="@+id/chapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                tools:text="章节标题" />

        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/menu_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/category_bottom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/menu_icon_catalog_nor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/progress_bottom_btn" />

            <ImageView
                android:id="@+id/progress_bottom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_icon_jump_nor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/category_bottom_btn"
                app:layout_constraintRight_toLeftOf="@+id/setting_bottom_btn" />

            <ImageView
                android:id="@+id/setting_bottom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_icon_setting_nor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/progress_bottom_btn"
                app:layout_constraintRight_toLeftOf="@+id/font_bottom_btn" />

            <ImageView
                android:id="@+id/font_bottom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/menu_icon_vote_nor"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/setting_bottom_btn"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/pre_chapter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="63dp"
                android:layout_marginLeft="40dp"
                android:text="上一章"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/jump_chapter_seekbar"
                tools:visibility="gone" />

            <SeekBar
                android:id="@+id/jump_chapter_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:thumb="@drawable/seekbar_thumb_drawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="8"
                app:layout_constraintLeft_toLeftOf="@id/pre_chapter_btn"
                app:layout_constraintRight_toLeftOf="@+id/next_chapter_btn"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/next_chapter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="63dp"
                android:layout_marginRight="40dp"
                android:text="下一章"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/jump_chapter_seekbar"
                app:layout_constraintRight_toRightOf="parent"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/switch_chapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/jump_chapter_seekbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="当前章节标题"
                tools:visibility="gone" />
        </android.support.constraint.ConstraintLayout>


    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/content_navi"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        app:headerLayout="@layout/header_chapter_page_navi"
        app:menu="@menu/page_category_navigation"
        tools:visibility="visible" />

</android.support.v4.widget.DrawerLayout>


